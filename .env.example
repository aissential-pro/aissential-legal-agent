# AIssential Legal Agent - Environment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# AI PROVIDERS (choose at least one)
# =============================================================================

# OpenAI API key (GPT-4, GPT-4o, etc.)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxx

# Anthropic API key (Claude models) - Direct access
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxx

# Mistral API key (for future use)
# Get from: https://console.mistral.ai/
MISTRAL_API_KEY=xxx

# =============================================================================
# LLM GATEWAY (Production - replaces direct API calls)
# =============================================================================

# Gateway API base URL
GATEWAY_BASE_URL=https://gateway.aissential.pro/v1

# Your Gateway API key
GATEWAY_API_KEY=gw_live_xxx

# Client identifier for Gateway
GATEWAY_CLIENT_ID=aissential-internal

# =============================================================================
# AI CONNECTOR (Centralized credentials - Optional)
# =============================================================================

# Connector base URL
CONNECTOR_BASE_URL=https://connector.aissential.pro/v1

# Connector API key (if not set, uses individual env vars below)
CONNECTOR_API_KEY=conn_xxx

# =============================================================================
# TELEGRAM CONFIGURATION
# =============================================================================

# Telegram bot token (from @BotFather)
TELEGRAM_TOKEN=123456789:ABCdefGHIjklMNOpqrsTUVwxyz

# Telegram chat ID for alerts
TELEGRAM_CHAT_ID=123456789

# =============================================================================
# GOOGLE DRIVE CONFIGURATION
# =============================================================================

# Google Drive folder ID to scan for contracts
GOOGLE_DRIVE_FOLDER_ID=your_folder_id_here

# Path to GCP service account JSON
GOOGLE_APPLICATION_CREDENTIALS=gcp.json

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Risk score threshold for alerts (0-100)
RISK_THRESHOLD_ALERT=60

# Log directory
LOGS_DIR=logs

# Debug mode (true/false)
DEBUG_MODE=false
